<% include ./partials/header %>
  
  <main role="main">

      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="first-slide img-fluid" src="/img/img1.jpeg" alt="First slide">
            <div class="container">
              <div class="carousel-caption">
                <h1>Example headline.</h1>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img class="second-slide img-fluid" src="/img/img6.jpeg" alt="Second slide">
            <div class="container">
              <div class="carousel-caption">
                <h1>Another example headline.</h1>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img class="third-slide img-fluid" src="/img/img3.jpeg" alt="Third slide">
            <div class="container">
              <div class="carousel-caption">
                <h1>One more for good measure.</h1>
              </div>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>


      <!-- Marketing messaging and featurettes
      ================================================== -->
      <!-- Wrap the rest of the page in another container to center all the content. -->

      <div class="container marketing mt-5">

        <!-- Three columns of text below the carousel -->
        <div class="row">
          <div class="col-lg-4">
            <i class="fas fa-child marketing-icon-size color-1"></i>
            <h2>Plan</h2>
            <p>Each party is prepared how you want it.</p>
          </div><!-- /.col-lg-4 -->
          <div class="col-lg-4">
            <i class="fas fa-birthday-cake marketing-icon-size color-7"></i>
            <h2>Celebrate</h2>
            <p>Throw the perfect party with games and snacks!</p>
          </div><!-- /.col-lg-4 -->
          <div class="col-lg-4">
            <i class="fas fa-flask marketing-icon-size color-6"></i>
            <h2>Learn</h2>
            <p>Learn while having fun!</p>
          </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->


        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider color-1">

        <div class="row featurette">
          <div class="col-md-7">
            <blockquote class="oval-thought-border">
            <p class="featurette-heading p-3">Fun games <span class="text-muted">that'll encourage learning.</span></p>
            </blockquote>
          </div>
          <div class="col-md-5">
            <img class="featurette-image img-fluid mx-auto rounded" src="/img/img20.jpg" alt="Generic placeholder image">
          </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
          <div class="col-md-7 order-md-2">
            <blockquote class="oval-thought-border-left">
            <p class="featurette-heading p-3">Design the party <span class="text-muted">around your child!</span></p>
            </blockquote>
          </div>
          <div class="col-md-5 order-md-1">
            <img class="featurette-image img-fluid mx-auto rounded" src="/img/img21.jpg" alt="Generic placeholder image">
          </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
          <div class="col-md-7">
            <blockquote class="oval-thought-border border-yellow">
            <p class="featurette-heading p-3">And have fun <span class="text-muted">till the very last minute.</span></p>
            </blockquote>
          </div>
          <div class="col-md-5">
            <img class="featurette-image img-fluid mx-auto rounded" src="/img/img22.jpg" alt="Generic placeholder image">
          </div>
        </div>

        <hr class="featurette-divider">

        <!-- /END THE FEATURETTES -->

      </div><!-- /.container -->
    
<% include ./partials/footer %>